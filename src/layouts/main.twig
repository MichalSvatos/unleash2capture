<body class="no-js">
<script>
	document.body.className = document.body.className.replace(/no-js/, 'js')
</script>
<main id="main">
	{% block content %}{% endblock %}
</main>
{{ component('header') }}
{{ component('footer') }}
</body>

<script src="/src/scripts/main.js" type="module"></script>
</html>
